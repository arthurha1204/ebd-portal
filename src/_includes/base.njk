<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | EBD Juv Recon</title>
    <link rel="icon" href="/assets/favicon.png" type="image/png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #141414;   
            --primary-light: #1f1f1f;   
            --accent-color: #0267a7;    
            --accent-hover: #024f82;
            --bg-body: #F9F7F2;         
            --bg-card: #FFFFFF;         
            --bg-header: #141414;
            --text-main: #141414;       
            --text-muted: #64748B;
            --text-on-dark: #FFFFFF;
            --border-radius: 6px;
            --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
            --shadow-md: 0 4px 6px -1px rgba(0,0,0,0.1);
            --transition: all 0.2s ease-in-out;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: 'Merriweather', serif;
            background-color: var(--bg-body);
            color: var(--text-main);
            line-height: 1.6;
            display: flex; flex-direction: column; min-height: 100vh;
            overflow-x: hidden;
        }

        h1, h2, h3, h4, h5 {
            font-family: 'Inter', sans-serif;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
            font-weight: 700;
        }

        a { text-decoration: none; color: inherit; transition: var(--transition); cursor: pointer; }
        ul { list-style: none; }
        img { max-width: 100%; height: auto; display: block; }
        .container { max-width: 1200px; margin: 0 auto; padding: 0 1.5rem; width: 100%; position: relative; z-index: 2; }
        
        /* * ==========================================
         * 2. COMPONENTS
         * ==========================================
         */
        .btn {
            display: inline-flex; align-items: center; justify-content: center; gap: 0.5rem;
            padding: 0.75rem 1.5rem; border-radius: 4px;
            font-family: 'Inter', sans-serif; font-weight: 600; font-size: 0.9rem;
            cursor: pointer; border: none; transition: var(--transition);
            text-transform: uppercase; letter-spacing: 0.05em;
        }
        .btn-primary { background-color: var(--primary-color); color: #fff; }
        .btn-primary:hover { background-color: #000; transform: translateY(-1px); }
        .btn-accent { background-color: var(--accent-color); color: #fff; }
        .btn-accent:hover { background-color: var(--accent-hover); transform: translateY(-1px); }
        .btn-outline { background: transparent; border: 1px solid var(--primary-color); color: var(--primary-color); }
        .btn-outline:hover { background-color: var(--primary-color); color: #fff; }

        .card {
            background: var(--bg-card); border: 1px solid #e2e8f0;
            border-radius: var(--border-radius); overflow: hidden;
            transition: var(--transition); height: 100%;
        }
        .card:hover { transform: translateY(-3px); box-shadow: var(--shadow-md); border-color: var(--accent-color); }

        .badge-soon {
            font-size: 0.6rem; background-color: var(--accent-color); color: #fff;
            padding: 2px 6px; border-radius: 4px; margin-left: 5px;
            text-transform: uppercase; font-weight: 700; vertical-align: middle;
        }

        /* * ==========================================
         * 3. HEADER & NAVBAR
         * ==========================================
         */
        header {
            background-color: var(--bg-header); color: #fff;
            padding: 0.5rem 0;
            position: sticky; top: 0; z-index: 1000;
            border-bottom: 3px solid var(--accent-color);
        }
        .header-content { display: flex; justify-content: space-between; align-items: center; }
        
        .logo { display: flex; align-items: center; height: 50px; }
        .logo img { height: 100%; width: auto; object-fit: contain; }

        .nav-links { display: flex; gap: 2rem; align-items: center; margin-right: 1rem; }
        .nav-links a { font-family: 'Inter', sans-serif; font-size: 0.85rem; text-transform: uppercase; font-weight: 500; opacity: 0.8; }
        .nav-links a:hover, .nav-links a.active { opacity: 1; color: #fff; border-bottom: 2px solid var(--accent-color); }
        
        .right-nav-container { display: flex; align-items: center; gap: 15px; }
        .nav-cross { height: 30px; width: auto; opacity: 0.8; }
        .mobile-menu-btn { display: none; background: none; border: none; color: #fff; cursor: pointer; }

        /* * ==========================================
         * 4. VIEWS & SECTIONS
         * ==========================================
         */
        .page-view { display: none; padding-top: 2rem; animation: fadeIn 0.4s ease; min-height: 60vh; }
        .page-view.active { display: block; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }

        .hero {
            background: linear-gradient(to right, #000000, rgba(62, 59, 59, 0.6)), url('fundo.jpg');
            background-size: cover; background-position: center;
            color: #fff; padding: 5rem 0; margin-top: -2rem; margin-bottom: 3rem;
            position: relative; overflow: hidden;
        }
        .hero h1 { color: #fff !important; }
        
        .hero-watermark {
            position: absolute; top: 0; left: -50px; height: 120%; width: auto;
            opacity: 0.2; pointer-events: none; transform: rotate(5deg); z-index: 1;
        }

        .main-grid { display: grid; grid-template-columns: 1fr; gap: 2.5rem; }
        .feed-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 2rem; }
        
        .sidebar-widget {
            background: #fff; border: 1px solid #e2e8f0; padding: 1.5rem;
            margin-bottom: 1.5rem; border-radius: var(--border-radius);
        }
        .sidebar-widget h3 { font-size: 1rem; text-transform: uppercase; border-bottom: 2px solid var(--accent-color); padding-bottom: 0.5rem; display: inline-block; margin-bottom: 1rem;}
        .cat-list li { border-bottom: 1px solid #f1f5f9; }
        .cat-list a { display: block; padding: 0.75rem 0; font-family: 'Inter', sans-serif; font-size: 0.9rem; }
        
        .section-header { 
            display: flex; align-items: center; justify-content: space-between; 
            margin-bottom: 2rem; border-bottom: 1px solid #e2e8f0; padding-bottom: 1rem; margin-top: 3rem;
        }

        /* * ==========================================
         * 5. QUEM SOMOS & STATS
         * ==========================================
         */
        .about-section {
            background-color: var(--primary-color); color: #fff;
            padding: 6rem 0; margin-top: 4rem; position: relative; overflow: hidden;
        }

        .bible-verse-box {
            text-align: center; max-width: 800px; margin: 0 auto 4rem auto;
            border: 1px solid rgba(255,255,255,0.1); padding: 2rem; border-radius: 8px;
            background: rgba(255,255,255,0.02);
        }
        .bible-verse-text { font-family: 'Merriweather', serif; font-style: italic; font-size: 1.1rem; margin-bottom: 1rem; color: #e2e8f0; }
        .bible-verse-ref { font-family: 'Inter', sans-serif; font-weight: 700; color: var(--accent-color); text-transform: uppercase; font-size: 0.9rem; }

        .about-split-layout { display: grid; grid-template-columns: 1fr 1.5fr; gap: 4rem; align-items: start; margin-bottom: 4rem; }
        .story-video-container { width: 100%; max-width: 350px; aspect-ratio: 9 / 16; background-color: #000; border-radius: 16px; overflow: hidden; border: 4px solid rgba(255,255,255,0.1); box-shadow: 0 10px 30px rgba(0,0,0,0.5); }
        .story-video-container video { width: 100%; height: 100%; object-fit: cover; }

        .about-content h2 { font-size: 2.5rem; color: #fff; margin-bottom: 1.5rem; }
        .about-content p { color: #cbd5e1; font-size: 1.1rem; margin-bottom: 2rem; text-align: justify; }

        .benefits-list { display: grid; gap: 1.5rem; }
        .benefit-item { display: flex; align-items: flex-start; gap: 1rem; }
        .benefit-icon { background: rgba(2, 103, 167, 0.2); color: var(--accent-color); width: 40px; height: 40px; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
        .benefit-text h4 { font-size: 1.1rem; margin-bottom: 0.2rem; color: #fff; }
        .benefit-text p { font-size: 0.95rem; color: #94a3b8; margin: 0; }

        .stats-container { background: rgba(255, 255, 255, 0.05); border-radius: 16px; padding: 3rem 2rem; margin: 3rem 0 4rem 0; text-align: center; border: 1px solid rgba(255,255,255,0.1); }
        .stats-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem; }
        .stat-number { font-family: 'Inter', sans-serif; font-size: 3.5rem; font-weight: 800; color: var(--accent-color); line-height: 1; display: block; margin-bottom: 0.5rem; }
        .stat-label { font-family: 'Inter', sans-serif; font-size: 1rem; text-transform: uppercase; color: #fff; opacity: 0.8; }
        .stat-sub { display: block; margin-top: 1rem; font-family: 'Inter', sans-serif; font-weight: 800; font-size: 1.5rem; color: #94a3b8; font-style: italic; text-transform: uppercase; }
        .stat-footer { border-top: 1px solid rgba(255,255,255,0.1); padding-top: 1.5rem; margin-top: 1.5rem; }
        .stat-highlight { color: #4ade80; font-weight: 700; font-family: 'Inter', sans-serif; text-transform: uppercase; font-size: 0.9rem; display: block; margin-bottom: 0.5rem; }

        /* * ==========================================
         * 6. GALERIA & NEWSLETTER
         * ==========================================
         */
        .gallery-title { text-align: center; margin-bottom: 2rem; font-size: 1.5rem; color: #fff; text-transform: uppercase; letter-spacing: 2px; opacity: 0.7; }
        .carousel-container { width: 100%; overflow: hidden; padding: 1rem 0; }
        .carousel-track { display: flex; width: calc(250px * 10); animation: scroll 30s linear infinite; }
        .carousel-slide { width: 250px; height: 180px; flex-shrink: 0; padding: 0 10px; }
        .carousel-slide img { width: 100%; height: 100%; object-fit: cover; border-radius: 8px; opacity: 0.8; }
        @keyframes scroll { 0% { transform: translateX(0); } 100% { transform: translateX(calc(-250px * 5)); } }

        .newsletter-section { background-color: var(--accent-color); padding: 4rem 0; color: #fff; }
        .newsletter-content { display: flex; align-items: center; justify-content: space-between; gap: 2rem; flex-wrap: wrap; }
        .newsletter-form { display: flex; gap: 0.5rem; flex: 1; min-width: 300px; }
        .newsletter-form input { flex-grow: 1; padding: 0.8rem 1rem; border-radius: 4px; border: none; }

        /* FOOTER AJUSTADO */
        footer { background: #000; color: #888; padding: 4rem 0 2rem 0; font-size: 0.9rem; }
        .footer-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2.5rem; margin-bottom: 3rem; }
        .footer-col h4 { color: #fff; margin-bottom: 1.2rem; border-left: 2px solid var(--accent-color); padding-left: 10px; text-transform: uppercase; }
        .footer-col a { display: block; margin-bottom: 0.6rem; color: #a1a1aa; }
        
        /* Centralização da cruz */
        .footer-cross-container { 
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 3rem 0 1rem 0; 
            opacity: 0.2; 
        }
        .footer-cross-container img { width: 40px; }

        /* Centralização do texto */
        .copyright { 
            text-align: center; 
            border-top: 1px solid #1a1a1a;
            padding-top: 2rem;
        }

        @media (min-width: 768px) { .main-grid { grid-template-columns: 7fr 3fr; } }
        @media (max-width: 767px) {
            .nav-links { display: none; flex-direction: column; position: absolute; top: 100%; left: 0; width: 100%; background: var(--primary-color); padding: 1rem; }
            .nav-links.active { display: flex; }
            .mobile-menu-btn { display: block; }
            .about-split-layout { grid-template-columns: 1fr; }
            .stats-grid { grid-template-columns: 1fr; }
        }
    </style>
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</head>
<body>
    <header>
        <div class="container header-content">
            <a href="/" class="logo"><img src="/assets/logo.png" alt="EBD Juv Recon"></a>
            <div class="right-nav-container">
                <nav>
                    <ul class="nav-links" id="navLinks">
                        <li><a href="/">Início</a></li>
                        <li><a href="/estudos">Estudos</a></li>
                        <li><a href="/biblioteca">Biblioteca</a></li>
                        <li><a href="#" style="opacity:0.6; cursor: default;">Loja <span class="badge-soon">Em Breve</span></a></li>
                    </ul>
                </nav>
                <img src="/assets/cruz.png" class="nav-cross" alt="Cruz">
                <button class="mobile-menu-btn" onclick="document.getElementById('navLinks').classList.toggle('active')">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
                </button>
            </div>
        </div>
    </header>

    {{ content | safe }}

    <section class="newsletter-section">
        <div class="container newsletter-content">
            <div class="newsletter-text">
                <h2>Não perca nenhum conteúdo</h2>
                <p>Receba avisos das novas aulas, artigos e vídeos diretamente no seu e-mail.</p>
            </div>
            <form class="newsletter-form" onsubmit="event.preventDefault(); alert('Em breve!');">
                <input type="email" placeholder="Seu melhor e-mail" required>
                <button type="submit" class="btn btn-primary">INSCREVER-SE</button>
            </form>
        </div>
    </section>

    <footer>
        <div class="footer-cross-container"><img src="/assets/cruz.png" alt="Cruz"></div>
        <div class="copyright">&copy; 2026 EBD JUV RECON. Soli Deo Gloria</div>
    </footer>

    <script>
        function showPage(pageId) {
            const fullId = pageId.endsWith('-view') ? pageId : pageId + '-view';
            document.querySelectorAll('.page-view').forEach(p => {
                p.classList.remove('active');
                p.style.display = 'none';
            });
            const target = document.getElementById(fullId);
            if(target) {
                target.style.display = 'block';
                setTimeout(() => target.classList.add('active'), 10);
                window.scrollTo(0,0);
            }
            document.getElementById('navLinks').classList.remove('active');
        }

        async function fetchLatestVideo() {
            const rssUrl = `https://api.rss2json.com/v1/api.json?rss_url=https://www.youtube.com/feeds/videos.xml?user=paraReconciliar`;
            try {
                const response = await fetch(rssUrl);
                const data = await response.json();
                if (data.items && data.items.length > 0) {
                    const video = data.items[0]; 
                    const videoId = video.guid.split(':')[2]; 
                    const thumbUrl = `https://img.youtube.com/vi/${videoId}/mqdefault.jpg`;
                    const html = `
                        <a href="${video.link}" target="_blank" style="display: block; text-decoration: none;">
                            <div style="position: relative; overflow: hidden; border-radius: 6px; margin-bottom: 0.8rem;">
                                <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background: rgba(0,0,0,0.6); padding: 10px; border-radius: 50%; z-index: 2;">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="#fff"><polygon points="5 3 19 12 5 21 5 3"></polygon></svg>
                                </div>
                                <img src="${thumbUrl}" style="width: 100%; display: block; transition: 0.3s;" onmouseover="this.style.transform='scale(1.05)'" onmouseout="this.style.transform='scale(1)'">
                            </div>
                            <h4 style="font-size: 0.95rem; color: var(--primary-color); line-height: 1.4; margin-bottom: 0.2rem; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">${video.title}</h4>
                            <span style="font-size: 0.75rem; color: #64748B;">Postado em: ${new Date(video.pubDate).toLocaleDateString('pt-BR')}</span>
                        </a>`;
                    document.getElementById('latest-video-container').innerHTML = html;
                }
            } catch (error) {
                document.getElementById('latest-video-container').innerHTML = '<p style="font-size:0.8rem; color: #888;">Assista ao vivo no YouTube.</p>';
            }
        }

        function animateValue(id, start, end, duration) {
            const obj = document.getElementById(id);
            if(!obj) return;
            let startTimestamp = null;
            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                obj.innerHTML = "+" + Math.floor(progress * (end - start) + start);
                if (progress < 1) window.requestAnimationFrame(step);
            };
            window.requestAnimationFrame(step);
        }

        document.addEventListener('DOMContentLoaded', () => {
            fetchLatestVideo();
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateValue("classCounter", 0, 80, 2000);
                        animateValue("seriesCounter", 0, 16, 2000);
                        observer.unobserve(entry.target);
                    }
                });
            });
            const statsSection = document.querySelector('.stats-container');
            if(statsSection) observer.observe(statsSection);
        });
    </script>
</body>
</html>