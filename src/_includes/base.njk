                    <a href="https://www.bibliaonline.com.br/" target="_blank">Bíblia Online ↗</a>
                </div>
            </div>
            <div class="footer-cross-container"><img src="/assets/cruz.png" alt="Cruz"></div>
            <div class="copyright">&copy; 2026 EBD JUV RECON. Todos os direitos reservados.<br><span style="font-size: 0.75rem; opacity: 0.5;">Soli Deo Gloria</span></div>
        </div>
    </footer>

    <script>
        function openVideo(url, title) {
            if(!url) return;
            const modal = document.getElementById('videoModal');
            let embedUrl = url;
            if(url.includes("watch?v=")) embedUrl = url.replace("watch?v=", "embed/");
            document.getElementById('youtubeFrame').src = embedUrl;
            if(title) document.getElementById('modalTitle').innerText = title;
            modal.style.display = 'flex';
        }
        function closeVideo() {
            document.getElementById('videoModal').style.display = 'none';
            document.getElementById('youtubeFrame').src = "";
        }
        if (window.netlifyIdentity) {
            window.netlifyIdentity.on("init", user => { if (!user) window.netlifyIdentity.on("login", () => document.location.href = "/admin/"); });
        }
    </script>
</body>
