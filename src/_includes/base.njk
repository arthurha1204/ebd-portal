        // FUNÇÕES JS (Mantive as mesmas para garantir funcionamento)
        function renderCards(containerId, dataArray) {
            const container = document.getElementById(containerId);
            if(!container) return;
            container.innerHTML = '';
            dataArray.forEach(item => {
                let badgeClass = '', label = '', action = '';
                if (item.type === 'video') { badgeClass = 'type-video'; label = 'VÍDEO'; action = `onclick="openVideo('${item.videoUrl}', '${item.title}', '${item.snippet}')"`; } 
                else { if(item.type === 'lesson') { badgeClass = 'type-lesson'; label = 'AULA'; } else { badgeClass = 'type-article'; label = 'ARTIGO'; } action = `onclick="openArticleDetail(${item.id})"`; }
                const primaryTag = item.tags[0];
                const html = `
                    <div class="card" style="cursor: pointer;" ${action}>
                        <div style="height: 200px; position: relative; overflow:hidden;">
                            <span class="content-type-badge ${badgeClass}">${label}</span>
                            <img src="${item.image}" style="width:100%; height:100%; object-fit:cover;">
                        </div>
                        <div class="card-content">
                            <div><span class="tag" onclick="event.stopPropagation(); filterByTag('${primaryTag}')">${primaryTag}</span></div>
                            <h3 style="font-size: 1.2rem; margin-top: 0.5rem; margin-bottom: 0.5rem;">${item.title}</h3>
                            <p style="font-size: 0.85rem; color: #64748B; margin-bottom: 1rem;">${item.date} • ${item.author}</p>
                            <p style="font-size: 0.95rem; margin-bottom: 1.5rem; color: #333;">${item.snippet}</p>
                            <button class="btn btn-outline" style="width: 100%; margin-top: auto;">VER CONTEÚDO</button>
                        </div>
                    </div>`;
                container.innerHTML += html;
            });
        }

        function openArticleDetail(id) {
            const item = mockData.find(d => d.id === id);
            if(!item) return;
            document.getElementById('detail-image').src = item.image;
            document.getElementById('detail-title').innerText = item.title;
            document.getElementById('detail-author').innerText = item.author;
            document.getElementById('detail-date').innerText = item.date;
            const tagsContainer = document.getElementById('detail-tags');
            tagsContainer.innerHTML = '';
            item.tags.forEach(tag => { const tagElement = document.createElement('span'); tagElement.className = 'tag'; tagElement.innerText = tag; tagElement.onclick = () => filterByTag(tag); tagsContainer.appendChild(tagElement); });
            document.getElementById('detail-content').innerHTML = item.content || `<p>${item.snippet}</p><p>Conteúdo completo em breve...</p>`;
            const relatedItems = mockData.filter(d => d.id !== id);
            renderCards('detail-related-feed', relatedItems);
            showPage('article-detail');
        }

        function filterByTag(tagName) {
            const results = mockData.filter(item => item.tags.includes(tagName));
            document.getElementById('search-term').innerText = tagName;
            const container = document.getElementById('search-results');
            if(results.length > 0) { renderCards('search-results', results); } else { container.innerHTML = '<p>Nenhum conteúdo encontrado com esta tag.</p>'; }
            showPage('search');
        }

        function showPage(pageId) {
            const fullId = pageId.endsWith('-view') ? pageId : pageId + '-view';
            document.querySelectorAll('.page-view').forEach(p => { p.classList.remove('active'); p.style.display = 'none'; });
            const target = document.getElementById(fullId);
            if(target) { target.style.display = 'block'; setTimeout(() => target.classList.add('active'), 10); window.scrollTo(0,0); }
        }
        
        function showFiltered(tag) { filterByTag(tag); }

        function openVideo(url, title, desc) {
            if(!url) return;
            const modal = document.getElementById('videoModal');
            document.getElementById('youtubeFrame').src = url;
            document.getElementById('modalTitle').innerText = title || 'Vídeo';
            document.getElementById('modalDesc').innerText = desc || '';
            modal.style.display = 'flex';
        }

        function closeVideo() {
            const modal = document.getElementById('videoModal');
            modal.style.display = 'none';
            document.getElementById('youtubeFrame').src = ""; 
        }

        function updateStats() {
            const startDate = new Date('2026-01-24'); const today = new Date();
            const baseClasses = 80; const baseSeries = 16;
            const diffTime = Math.abs(today - startDate);
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
            const classesAdded = Math.floor(diffDays / 7);
            const seriesAdded = Math.floor(diffDays / 28); 
            animateValue("classCounter", 0, baseClasses + classesAdded, 2000);
            animateValue("seriesCounter", 0, baseSeries + seriesAdded, 2000);
        }

        function animateValue(id, start, end, duration) {
            const obj = document.getElementById(id);
            if(!obj) return;
            let startTimestamp = null;
            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                obj.innerHTML = "+" + Math.floor(progress * (end - start) + start);
                if (progress < 1) { window.requestAnimationFrame(step); }
            };
            window.requestAnimationFrame(step);
        }

        async function fetchLatestVideo() {
            const rssUrl = `https://api.rss2json.com/v1/api.json?rss_url=https://www.youtube.com/feeds/videos.xml?user=paraReconciliar`;
            try {
                const response = await fetch(rssUrl);
                const data = await response.json();
                if (data.items && data.items.length > 0) {
                    const video = data.items[0]; 
                    const videoId = video.guid.split(':')[2]; 
                    const thumbUrl = `https://img.youtube.com/vi/${videoId}/mqdefault.jpg`;
                    const html = `
                        <a href="${video.link}" target="_blank" style="display: block; text-decoration: none; group">
                            <div style="position: relative; overflow: hidden; border-radius: 6px; margin-bottom: 0.8rem;">
                                <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background: rgba(0,0,0,0.6); padding: 10px; border-radius: 50%;">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="#fff"><polygon points="5 3 19 12 5 21 5 3"></polygon></svg>
                                </div>
                                <img src="${thumbUrl}" style="width: 100%; display: block; transition: 0.3s;" onmouseover="this.style.transform='scale(1.05)'" onmouseout="this.style.transform='scale(1)'">
                            </div>
                            <h4 style="font-size: 0.95rem; color: var(--primary-color); line-height: 1.4; margin-bottom: 0.2rem; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">${video.title}</h4>
                            <span style="font-size: 0.75rem; color: #64748B;">Postado em: ${new Date(video.pubDate).toLocaleDateString('pt-BR')}</span>
                        </a>`;
                    document.getElementById('latest-video-container').innerHTML = html;
                } else { console.log('Nenhum vídeo encontrado para o usuário paraReconciliar'); }
            } catch (error) { console.error('Erro ao carregar vídeo:', error); document.getElementById('latest-video-container').innerHTML = '<p style="font-size:0.8rem; color: #888;">Assista ao vivo no YouTube.</p>'; }
        }

        document.addEventListener('DOMContentLoaded', () => {
            renderCards('unified-feed', mockData);
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => { if (entry.isIntersecting) { updateStats(); observer.unobserve(entry.target); } });
            });
            const statsSection = document.querySelector('.stats-container');
            if(statsSection) observer.observe(statsSection);
            fetchLatestVideo();
        });
    </script>

