---
layout: base.njk
---

<main style="padding-top: 3rem; min-height: 80vh;">
    <div class="container" style="max-width: 900px; margin: 0 auto; padding: 0 1.5rem;">
        
        <a href="javascript:history.back()" class="btn btn-outline" style="margin-bottom: 2rem; padding: 0.5rem 1rem; font-size: 0.8rem;">&larr; Voltar</a>

        {% if amazonLink %}
        <div class="book-layout">
            <div style="box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);">
                {% if cover %}
                <img src="{{ cover }}" alt="{{ title }}" style="width: 100%; display: block; border-radius: 4px;">
                {% endif %}
            </div>

            <div>
                <span class="tag tag-blue" style="margin-bottom: 1rem;">Recomendação</span>
                <h1 style="font-size: 2.5rem; line-height: 1.1; margin-bottom: 0.5rem; color: var(--primary-color);">{{ title }}</h1>
                <h3 style="font-size: 1.2rem; font-weight: 400; color: var(--text-muted); margin-bottom: 2rem;">
                    por <span style="color: var(--primary-color); font-weight: 600;">{{ author }}</span>
                </h3>

                <div style="margin-bottom: 2rem;">
                    <h4 style="font-size: 0.9rem; text-transform: uppercase; color: #94A3B8; letter-spacing: 1px; margin-bottom: 0.5rem;">Por que ler?</h4>
                    <p style="font-size: 1.05rem; line-height: 1.6; font-style: italic; color: #333;">
                        "{{ resumo }}"
                    </p>
                </div>

                <a href="{{ amazonLink }}" target="_blank" class="btn btn-amazon">
                    Comprar na Amazon ↗
                </a>
            </div>
        </div>

        <style>
            .book-layout { display: grid; grid-template-columns: 300px 1fr; gap: 3rem; align-items: start; margin-bottom: 4rem; }
            @media (max-width: 768px) {
                .book-layout { grid-template-columns: 1fr !important; justify-items: center; text-align: center; }
                .book-layout > div:first-child { max-width: 200px; margin: 0 auto; }
            }
        </style>

        {% else %}
        
            {% if youtubeLink %}
            <div style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; border-radius: 8px; margin-bottom: 2rem; box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);">
                <iframe src="{{ youtubeLink | replace('watch?v=', 'embed/') }}" 
                        style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;" 
                        frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                </iframe>
            </div>
            
            <header style="margin-bottom: 2rem; text-align: center;">
                <div style="display: flex; gap: 10px; margin-bottom: 10px; justify-content: center;">
                    <span class="tag tag-blue">Vídeo</span>
                    {% for tag in tags %}{% if tag != 'video' %}<span class="tag">{{ tag }}</span>{% endif %}{% endfor %}
                </div>
                <h1 style="margin-bottom: 0.5rem;">{{ title }}</h1>
                <p style="color: var(--text-muted); font-weight: 500;">Canal: {{ author }} • Publicado em: {{ date | postDate }}</p>
            </header>
            <hr style="margin: 1.5rem 0; border: 0; border-top: 1px solid #e2e8f0;">

            {% else %}
                <header style="text-align: center; margin-bottom: 3rem;">
                    {% if image %}
                    <img src="{{ image }}" style="width: 100%; height: 400px; object-fit: cover; border-radius: 8px; margin-bottom: 2rem; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);" alt="Capa">
                    {% endif %}
                    
                    <div style="display: flex; justify-content: center; gap: 0.5rem; margin-bottom: 1rem; flex-wrap: wrap;">
                         {% for tag in tags %}
                            {% if tag != "post" and tag != "artigo" and tag != "aula" %}
                            <a href="/pesquisa/?tag={{ tag }}" class="tag">{{ tag }}</a>
                            {% endif %}
                        {% endfor %}
                    </div>

                    <h1 style="font-size: 2.5rem; line-height: 1.2; color: var(--primary-color);">{{ title }}</h1>

                    <div style="color: var(--text-muted); margin-top: 1rem; font-family: 'Inter', sans-serif; font-size: 0.9rem;">
                        Por <strong style="color: var(--primary-color);">{{ author }}</strong> • {{ date | postDate }}
                    </div>
                </header>
            {% endif %}

            <article style="font-size: 1.15rem; line-height: 1.8; color: #333; margin-bottom: 4rem; text-align: justify;">
                {{ content | safe }}

                {% if pdf %}
                <div style="background-color: #F8FAFC; border: 2px dashed #CBD5E1; border-radius: 8px; padding: 2rem; text-align: center; margin-top: 3rem;">
                    <h3 style="margin-bottom: 0.5rem; color: var(--primary-color);">Material de Apoio</h3>
                    <p style="font-size: 0.9rem; color: var(--text-muted); margin-bottom: 1.5rem;">
                        Baixe o PDF com os slides e anotações utilizados nesta lição.
                    </p>
                    <a href="{{ pdf }}" download class="btn btn-primary">
                        <svg style="width:18px; height:18px; margin-right:8px; stroke:currentColor; fill:none; stroke-width:2; vertical-align:middle" viewBox="0 0 24 24"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg>
                        BAIXAR PDF
                    </a>
                </div>
                {% endif %}
            </article>

        {% endif %} <div style="border-top: 1px solid #e2e8f0; margin-top: 4rem; padding-top: 3rem;">
            <h3 style="margin-bottom: 2rem; border-left: 4px solid var(--accent-color); padding-left: 1rem; font-family: 'Inter', sans-serif;">Veja Também</h3>
            <div class="feed-grid">
                {% for post in collections.all | reverse %}
                    {% if loop.index0 < 3 and post.url != page.url and post.data.title %}
                    <article class="card">
                        <div style="height: 150px; position: relative; overflow:hidden;">
                            {% set badgeColor = "var(--primary-color)" %} {% set typeLabel = "CONTEÚDO" %}
                            {% if '/videos/' in post.url %} {% set badgeColor = "#ef4444" %} {% set typeLabel = "VÍDEO" %}
                            {% elif '/aulas/' in post.url %} {% set badgeColor = "var(--accent-color)" %} {% set typeLabel = "AULA" %}
                            {% elif '/livros/' in post.url %} {% set badgeColor = "#d97706" %} {% set typeLabel = "LIVRO" %}
                            {% endif %}
                            
                            <span class="content-type-badge" style="background-color: {{ badgeColor }};">{{ typeLabel }}</span>
                            <img src="{{ post.data.image or post.data.cover or '/assets/fundo.jpg' }}" style="width:100%; height:100%; object-fit:cover;">
                        </div>
                        <div class="card-content">
                            <h4 style="font-size: 1rem; margin: 0.5rem 0;">{{ post.data.title }}</h4>
                            <a href="{{ post.url }}" class="btn btn-outline" style="width: 100%; margin-top: auto; font-size: 0.8rem;">VER</a>
                        </div>
                    </article>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</main>