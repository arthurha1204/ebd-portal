---
layout: base.njk
---
<main style="padding-top: 2rem;">
    <div class="container">
        <div style="background: {{ color | default('#141414') }}; color: #fff; padding: 3rem; border-radius: 12px; margin-bottom: 3rem; text-align: center;">
            <div style="font-size: 4rem; font-weight: 800; opacity: 0.3; line-height: 1;">{{ sigla }}</div>
            <h1 style="margin-top: -1.5rem; color: #fff;">{{ title }}</h1>
            <p>{{ description }}</p>
        </div>

        <h2 style="margin-bottom: 2rem;">Aulas desta SÃ©rie</h2>
        <div class="feed-grid">
            {% for aula in collections.aulas %}
                {% if aula.data.serie == title %}
                <div class="card">
                    <div class="card-body">
                        <h3>{{ aula.data.title }}</h3>
                        <a href="{{ aula.url }}" class="btn btn-outline" style="margin-top:1rem;">VER AULA</a>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</main>