---
layout: base.njk
---

<main style="padding-top: 0;">
    <div style="background-color: {{ color | default('#0267a7') }}; color: #fff; padding: 4rem 0; text-align: center; position: relative;">
        <div class="container">
            <div style="font-size: 6rem; font-weight: 800; opacity: 0.15; line-height: 1; margin-bottom: -3rem; user-select: none; font-family: 'Inter', sans-serif;">
                {{ sigla }}
            </div>
            
            <h1 style="color: #fff; font-size: 2.5rem; position: relative; z-index: 2; margin-bottom: 1rem;">{{ title }}</h1>
            
            <p style="font-size: 1.1rem; opacity: 0.9; max-width: 600px; margin: 1rem auto;">
                {{ description }}
            </p>
            
            {% if tag_serie %}
            <span class="tag" style="background: rgba(255,255,255,0.2); color: #fff; border: 1px solid rgba(255,255,255,0.4); margin-top: 1rem;">
                {{ tag_serie }}
            </span>
            {% endif %}
        </div>
    </div>

    <div class="container" style="margin-top: -2rem; position: relative; z-index: 3; background: #fff; border-radius: 8px; padding: 2rem; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1); margin-bottom: 4rem;">
        <h3 style="border-bottom: 2px solid #f1f5f9; padding-bottom: 1rem; margin-bottom: 1.5rem; font-family: 'Inter', sans-serif;">
            Aulas Disponíveis
        </h3>

        <ul class="lesson-list" style="list-style: none; padding: 0;">
            {% set encontrou = false %}
            {% for aula in collections.aulas %}
                {% if aula.data.serie == title %}
                {% set encontrou = true %}
                <li class="lesson-item" style="display: flex; justify-content: space-between; align-items: center; padding: 1rem; border-bottom: 1px solid #f1f5f9;">
                    <div>
                        <h4 style="margin: 0; color: var(--primary-color); font-size: 1.1rem; font-family: 'Inter', sans-serif;">{{ aula.data.title }}</h4>
                        <span style="font-size: 0.8rem; color: var(--text-muted);">{{ aula.data.author }} • {{ aula.date | postDate }}</span>
                    </div>
                    <a href="{{ aula.url }}" class="btn btn-outline" style="padding: 0.4rem 1rem; font-size: 0.8rem;">
                        ACESSAR
                    </a>
                </li>
                {% endif %}
            {% endfor %}

            {% if not encontrou %}
            <li style="text-align: center; padding: 2rem; color: #64748B;">
                Nenhuma aula cadastrada nesta série ainda.
            </li>
            {% endif %}
        </ul>
    </div>
</main>